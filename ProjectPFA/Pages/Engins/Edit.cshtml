@page "{id:guid}"
@model ProjectPFA.Pages.Engins.EditModel
@{
    ViewData["Title"] = "Edit Engin";
}

<h2 class="text-center my-4">Edit Engin</h2>

<div class="container mb-xxl-5 pb-5" >
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="EditEngin.Id" />

        <div class="form-group">
            <label asp-for="EditEngin.BCI" class="form-label">BCI</label>
            <input asp-for="EditEngin.BCI" class="form-control" />
            <span asp-validation-for="EditEngin.BCI" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EditEngin.Name" class="form-label">Name</label>
            <input asp-for="EditEngin.Name" class="form-control" />
            <span asp-validation-for="EditEngin.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EditEngin.Image" class="form-label">Upload Image</label>
            <input asp-for="EditEngin.Image" type="file" class="form-control" />
            <span asp-validation-for="EditEngin.Image" class="text-danger"></span>
        </div>

        <div class="form-group">
            <h4 class="my-3">Etat</h4>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.klaxon" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.klaxon" class="form-check-label">Klaxon</label>
            </div>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.Sallette_Tracteur" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.Sallette_Tracteur" class="form-check-label">Sallette Tracteur</label>
            </div>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.Flexible_Air_Tracteur" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.Flexible_Air_Tracteur" class="form-check-label">Flexible Air Tracteur</label>
            </div>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.Extincteur" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.Extincteur" class="form-check-label">Extincteur</label>
            </div>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.Verins_Translation_Fourches" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.Verins_Translation_Fourches" class="form-check-label">Verins Translation Fourches</label>
            </div>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.Eclairage" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.Eclairage" class="form-check-label">Eclairage</label>
            </div>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.gyrophares" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.gyrophares" class="form-check-label">Gyrophares</label>
            </div>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.Vitres" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.Vitres" class="form-check-label">Vitres</label>
            </div>
            <div class="form-check">
                <input asp-for="EditEngin.Etat.Carosserie" class="form-check-input" type="checkbox" />
                <label asp-for="EditEngin.Etat.Carosserie" class="form-check-label">Carosserie</label>
            </div>
        </div>

        <button type="submit" class="btn btn-danger btn-lg">Sauvegarder</button>
        <a asp-page="/Engins/List" class="btn btn-outline-danger btn-lg ms-2">Annuler</a>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        .form-label {
            font-weight: bold;
        }

        .btn-lg {
            padding: 0.5rem 1rem;
            font-size: 1.25rem;
        }

        .form-check-label {
            font-size: 1rem;
        }

        .my-3 {
            margin-top: 1rem;
            margin-bottom: 1rem;
        }

        .text-danger {
            font-size: 0.875rem;
        }
    </style>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
}
