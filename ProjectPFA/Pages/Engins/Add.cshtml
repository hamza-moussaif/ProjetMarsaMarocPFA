@page
@model ProjectPFA.Pages.Engins.AddModel
@{
    ViewData["Title"] = "Add Engin";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Add Engin</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label asp-for="AddEnginRequest.BCI" class="form-label"></label>
                            <input asp-for="AddEnginRequest.BCI" class="form-control" />
                            <span asp-validation-for="AddEnginRequest.BCI" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="AddEnginRequest.Name" class="form-label"></label>
                            <input asp-for="AddEnginRequest.Name" class="form-control" />
                            <span asp-validation-for="AddEnginRequest.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="AddEnginRequest.Image" class="form-label">Upload Image</label>
                            <input asp-for="AddEnginRequest.Image" type="file" class="form-control" />
                            <span asp-validation-for="AddEnginRequest.Image" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Engin State</label>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.klaxon" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.klaxon" class="form-check-label">Klaxon</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.Eclairage" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.Eclairage" class="form-check-label">Eclairage</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.Sallette_Tracteur" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.Sallette_Tracteur" class="form-check-label">Sallette Tracteur</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.Flexible_Air_Tracteur" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.Flexible_Air_Tracteur" class="form-check-label">Flexible Air Tracteur</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.Extincteur" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.Extincteur" class="form-check-label">Extincteur</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.Verins_Translation_Fourches" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.Verins_Translation_Fourches" class="form-check-label">Verins Translation Fourches</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.gyrophares" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.gyrophares" class="form-check-label">Gyrophares</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.Vitres" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.Vitres" class="form-check-label">Vitres</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="AddEnginRequest.Etat.Carosserie" class="form-check-input" type="checkbox" />
                                <label asp-for="AddEnginRequest.Etat.Carosserie" class="form-check-label">Carosserie</label>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-outline-danger btn-block">Ajouter Engin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
