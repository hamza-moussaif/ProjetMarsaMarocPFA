@page "{id:Guid}"
@model ProjectPFA.Pages.Assistant.Affectations.AddModel
@{
    ViewData["Title"] = "Add Affectation";
}

<div class="bg-light py-4 mb-5">
    <div class="container">
        <h2 class="text-center text-danger">Add Affectation</h2>
    </div>
</div>

<div class="container mb-5">
    <div class="card border-0 shadow-lg">
        <div class="card-body">
            <form id="affectationForm" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="AddAffectationRequest.Nom" class="form-label"></label>
                    <input asp-for="AddAffectationRequest.Nom" class="form-control form-control-lg border-danger" placeholder="Nom" required />
                    <div class="invalid-feedback">Please provide a valid Nom.</div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="AddAffectationRequest.Prenom" class="form-label"></label>
                    <input asp-for="AddAffectationRequest.Prenom" class="form-control form-control-lg border-danger" placeholder="Prénom" required />
                    <div class="invalid-feedback">Please provide a valid Prénom.</div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="AddAffectationRequest.Departement" class="form-label"></label>
                    <input asp-for="AddAffectationRequest.Departement" class="form-control form-control-lg border-danger" placeholder="Département" required />
                    <div class="invalid-feedback">Please provide a valid Département.</div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="AddAffectationRequest.Bci" class="form-label"></label>
                    <input asp-for="AddAffectationRequest.Bci" class="form-control form-control-lg border-danger" placeholder="BCI" required />
                    <div class="invalid-feedback">Please provide a valid BCI.</div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="AddAffectationRequest.Poste" class="form-label"></label>
                    <input asp-for="AddAffectationRequest.Poste" class="form-control form-control-lg border-danger" placeholder="Poste" required />
                    <div class="invalid-feedback">Please provide a valid Poste.</div>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="AddAffectationRequest.Shift" class="form-label"></label>
                    <input asp-for="AddAffectationRequest.Shift" class="form-control form-control-lg border-danger" placeholder="Shift" required />
                    <div class="invalid-feedback">Please provide a valid Shift.</div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg">Ajouter Affectation</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('affectationForm');
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    </script>
}
